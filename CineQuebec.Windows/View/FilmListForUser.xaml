<UserControl x:Class="CineQuebec.Windows.View.FilmListForUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CineQuebec.Windows.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="btn_retour" 
                    Content="Retour"
                    Width="75"
                    Height="25"
                    HorizontalAlignment="Left" Click="btn_retour_Click"
                    />
            <ListBox x:Name="lstProjections" Height="200" Width="400" SelectionChanged="lstProjections_OnSelectionChanged">
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10px, 0 , 0">
                <Button x:Name="btn_reserverPlace"
                        Margin="0, 0px, 0 , 10"
                        Width="150"
                        Height="25"
                        Content="Réserver ma place"
                        Click="Btn_reserverPlace_OnClick" />
            </StackPanel>
            
        </StackPanel>
    </Grid>

</UserControl>